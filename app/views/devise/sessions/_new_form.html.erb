<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label "Seu usuÃ¡rio" %><br />
    <%= f.text_field :login, autofocus: true, class: "form-control" %>
  </div>

