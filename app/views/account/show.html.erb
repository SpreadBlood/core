<div class="row">

   <div class="col-xs-7 col-xs-offset-1 ">
    <ul class="nav nav-tabs" id="user-profile-tabs">
      <li class="active">
        <a href="#tab-user-activity" data-toggle="tab">
          <%= fa('rss', text: 'Doações') %>
        </a>
      </li>
      <li>
        <a href="#tab-user-stats" data-toggle="tab">
          <%= fa('bar-chart', text: 'Estatísticas') %>
        </a>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="tab-user-activity">
        <% @user.donations.each do |donation| %>
          <%= render '/timeline/user_donation', donation: donation %>
        <% end %>
      </div>
      <div class="tab-pane " id="tab-user-stats">

      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <%= gravatar_for(@user, class: "img-circle img-responsive pull-left") %>
    <div style="margin-left: 100px; margin-bottom: 20px;">
      <h2 ><%= @user.at_username %></h2>
      <br/>
    </div>


  </div>
</div>
